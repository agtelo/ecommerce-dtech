                    <h3><%= products.name%></h3>
                </div>
                
                <div class="texto-servicios">
                    <div></i><img src="/images/products/<%= products.image %>" width="250px">
                    </div>
                    <br>
                    <div class="contenedor-btn">
                        <a href="/productos/<%= products.id %>"> <button class="boton-estilo" type="submit"> EDITAR</button> </a>
                        </div>  
                    <br>
                    
                <form action="" method="POST">
                    <div class="contenedor-btn">
                    <input type="submit" class="boton-estilo" value="ELIMINAR">
                    </div> 
                </form>                           
                </div>
            </div>
</div>
    </main>
    <footer>
        <%- include('../partials/footer.ejs'); -%>
    </footer>
